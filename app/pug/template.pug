block variables
doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title #{title}
		link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
		link(rel="stylesheet", href= 'css/main.css')
		-	const menuHeadings = ["Главная страница","Список самых больших городов","Туристическая памятка"]
		-	const url = ["index.html","Статистика.html","Памятка.html"]
		block head
	.centralBlock

		-	var i = 0
		.menuFlex
			.heading Гид-путеводитель по Японии
			.menuFlex
				each item in menuHeadings
					.menuItem
						a(href=url[i])=item
					-	i++

		.content
			block content

		script(src="js/jquery-3.5.1.min.js")
		script(src="js/main.js")
	footer 
		block footer